<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flynnchow.zero.magician">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00030001"
        android:required="true" />

    <application
        android:name=".MagicianApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Magician">
        <activity android:name=".search.view.SearchActivity" android:windowSoftInputMode="stateVisible">
        </activity>
        <activity android:name=".album.view.AlbumManagerActivity" />
        <activity android:name=".debug.DebugActivity" />
        <activity android:name=".gallery.view.GalleryActivity" />
        <activity android:name=".main.MainActivity" />
        <activity android:name=".launch.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>