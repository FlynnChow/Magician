<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.flynnchow.zero.magician.selecter.AudioSelectorViewModel" />
        <import type="android.view.View"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".selecter.AudioSelectorActivity"
        android:orientation="vertical">
        <FrameLayout
            android:paddingBottom="24dp"
            android:background="@color/audio_gray_background"
            android:layout_width="match_parent"
            android:layout_height="76dp">
            <ImageView
                app:tint="@color/black"
                android:layout_gravity="center_vertical"
                android:fitsSystemWindows="true"
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/ripple_oval"
                android:clickable="true"
                android:padding="4dp"
                android:src="@drawable/back"/>
            <TextView
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="52dp"
                android:textColor="@color/black"
                android:text="请选择背景音乐"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:visibility="@{viewModel.selectUri == null?View.GONE:View.VISIBLE}"
                android:id="@+id/confirm"
                android:textSize="16sp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"
                android:text="确定"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/list_view"
            android:layout_marginTop="56dp"
            android:background="@drawable/shape_selector_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</layout>