<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.flynnchow.zero.magician.debug.DebugViewModel"/> />
    </data>

    <LinearLayout
        android:background="#82B1FF"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:background="@color/white"
            android:elevation="4dp"
            android:textSize="20sp"
            android:textColor="@color/font_black_1"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:gravity="center_vertical"
            android:text="工程模式"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:id="@+id/clear_app_config"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ripple_other_item"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <ImageView
                        app:tint="@color/black"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/debug"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                    <TextView
                        android:text="清空应用配置"
                        android:textStyle="bold"
                        android:layout_marginStart="52dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        app:tint="@color/black_3"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="center_vertical|end"
                        android:layout_width="12dp"
                        android:layout_height="12dp"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/clear_ml_cache"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ripple_other_item"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <ImageView
                        app:tint="@color/black"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/debug"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                    <TextView
                        android:text="清空图像识别缓存和备份记录"
                        android:textStyle="bold"
                        android:layout_marginStart="52dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        app:tint="@color/black_3"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="center_vertical|end"
                        android:layout_width="12dp"
                        android:layout_height="12dp"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/clear_label_cache"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ripple_other_item"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <ImageView
                        app:tint="@color/black"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/debug"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                    <TextView
                        android:text="清空分类相册"
                        android:textStyle="bold"
                        android:layout_marginStart="52dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        app:tint="@color/black_3"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="center_vertical|end"
                        android:layout_width="12dp"
                        android:layout_height="12dp"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/clear_store"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ripple_other_item"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <ImageView
                        app:tint="@color/black"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/debug"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                    <TextView
                        android:text="清空故事"
                        android:textStyle="bold"
                        android:layout_marginStart="52dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        app:tint="@color/black_3"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="center_vertical|end"
                        android:layout_width="12dp"
                        android:layout_height="12dp"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/baidu"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ripple_other_item"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <ImageView
                        app:tint="@color/black"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/debug"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                    <TextView
                        android:text="百度授权"
                        android:textStyle="bold"
                        android:layout_marginStart="52dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        app:tint="@color/black_3"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="center_vertical|end"
                        android:layout_width="12dp"
                        android:layout_height="12dp"/>
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/upload"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/ripple_other_item"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <ImageView
                        app:tint="@color/black"
                        android:layout_marginStart="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/debug"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                    <TextView
                        android:text="文件上传测试"
                        android:textStyle="bold"
                        android:layout_marginStart="52dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        app:tint="@color/black_3"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="center_vertical|end"
                        android:layout_width="12dp"
                        android:layout_height="12dp"/>
                </FrameLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>