<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:background="@color/white"
            android:elevation="4dp"
            android:textSize="20sp"
            android:textColor="@color/font_black_1"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:gravity="center_vertical"
            android:text="工程模块"
            android:layout_width="match_parent"
            android:layout_height="56dp"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_margin="4dp"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/ripple_debug"
                    android:id="@+id/clear_ml_cache"
                    android:text="清空图像识别缓存"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"/>
                <TextView
                    android:layout_margin="4dp"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/ripple_debug"
                    android:id="@+id/clear_label_cache"
                    android:text="清空分类相册缓存"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"/>
                <TextView
                    android:layout_margin="4dp"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/ripple_debug"
                    android:id="@+id/clear_app_config"
                    android:text="清空应用配置"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"/>
                <TextView
                    android:layout_margin="4dp"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:background="@drawable/ripple_debug"
                    android:id="@+id/reset_app"
                    android:text="重新启动"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>