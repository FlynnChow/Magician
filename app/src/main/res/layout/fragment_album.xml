<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:elevation="0dp"
            app:elevation="0dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                app:layout_scrollFlags="scroll|enterAlways"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_bar_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/home_tab_name_2"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:transitionName="search"
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/shape_search">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/search" />

                    <TextView
                        android:transitionName="searchText"
                        android:id="@+id/hint"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:text="试试搜索你的照片"
                        android:textColor="@color/font_black_3" />
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="48dp"
                    app:tabGravity="fill"
                    app:tabMinWidth="48dp"
                    app:tabPaddingStart="0dp"
                    app:tabPaddingEnd="0dp"
                    app:tabIndicatorHeight="0dp"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="@color/purple_500"
                    app:tabTextAppearance="@style/tabBarStyle"
                    app:tabTextColor="@color/font_black_2"/>

                <ImageView
                    android:id="@+id/edit_album"
                    android:background="@drawable/ripple_oval"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="12dp"
                    android:padding="5dp"
                    android:src="@drawable/new_tab" />
            </FrameLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <FrameLayout
                android:id="@+id/empty"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/black_1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="80dp"
                    android:layout_gravity="center_horizontal"
                    android:text="还未创建相册"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>

            <FrameLayout
                android:visibility="gone"
                android:id="@+id/ml_prompt"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_ml_prompt"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal">

                <com.wang.avi.AVLoadingIndicatorView
                    style="@style/AVLoadingIndicatorView"
                    android:layout_marginStart="8dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    app:indicatorColor="@color/white"
                    app:indicatorName="BallSpinFadeLoaderIndicator" />
                <TextView
                    android:id="@+id/ml_prompt_text"
                    android:layout_marginEnd="40dp"
                    android:textSize="12sp"
                    android:layout_marginStart="32dp"
                    android:textColor="@color/font_white"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/ml_prompt_close"
                    android:src="@drawable/close"
                    android:padding="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
            </FrameLayout>
        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>