<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="pageAdapter"
            type="com.flynnchow.zero.magician.main.MainPageAdapter" />
    </data>

    <LinearLayout
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout_gravity="bottom">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <include
                android:id="@+id/main_gallery"
                layout="@layout/view_main_nav_tab"
                app:name="@{@string/home_tab_1}"
                app:pageAdapter="@{pageAdapter}" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <include
                android:id="@+id/main_photo_album"
                layout="@layout/view_main_nav_tab"
                app:name="@{@string/home_tab_2}"
                app:pageAdapter="@{pageAdapter}" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <include
                android:id="@+id/main_store"
                layout="@layout/view_main_nav_tab"
                app:name="@{@string/home_tab_3}"
                app:pageAdapter="@{pageAdapter}" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <ImageView
                android:layout_marginTop="4dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:src="@drawable/more_config"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
        </FrameLayout>
    </LinearLayout>
</layout>