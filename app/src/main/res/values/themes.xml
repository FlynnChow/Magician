<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Magician" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:attr/windowBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?android:attr/windowBackground</item>

        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
    </style>

    <style name="TranslucentTheme" parent="Theme.Magician">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AudioTheme" parent="Theme.Magician">
        <item name="android:statusBarColor">@color/audio_gray_background</item>
    </style>

    <style name="VideoCreator" parent="Theme.Magician">
        <item name="colorOnPrimary">@color/video_background</item>
        <item name="android:statusBarColor">@color/video_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/video_background</item>
        <item name="android:windowBackground">@color/video_background</item>
    </style>

    <style name="tabBarStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="VideoEdit" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#969696</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>
</resources>